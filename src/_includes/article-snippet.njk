{% for post in collections.posts | reverse | limit(limitValue) %}
<article class="brick entry" data-animate-el>
    <div class="entry__thumb">
        <a class="thumb-link">
            <img href="{{ post.url }}" src="{{ post.data.image }}" alt="{{ post.data.imageAlt }}">
        </a>
    </div>
    <div class="entry__text">
        <div class="entry__header">
            <div class="entry__meta">
                <span class="cat-links">
                    <a href="/category/{{ post.data.category }}/" >{{ post.data.category }}</a>
                </span>
                <span class="cat-links" >{{ post.data.geners }}</>
                <span class="byline">
                    By:
                   <a href="#0">{{ post.data.author }} <span class="byline">on</span>{{ post.date | postDate }}</a>
                </span>
            </div>
            <h1 class="entry__title"><a href="{{ post.url }} ">{{ post.data.title | title }}</a></h1>
        </div>           
       
    </div>                         
</article>
{% endfor %}
